<grammar
  xmlns="http://www.w3.org/2001/06/grammar"
  tag-format="semantics/1.0"
  version="1.0"
  root="rootRule"
  xml:lang="en-US"
  >

  <!--
  semantics/1.0-literals that was supported by Microsoft.Speech (Speech Server SDK) seems to not be supported by System.Speech (Speech SDK),
  need to use semantics/1.0 or semantics-ms/1.0 (both need different syntax), see https://msdn.microsoft.com/en-us/library/office/hh361606(v=office.14).aspx and https://msdn.microsoft.com/en-us/library/office/hh361639(v=office.14).aspx
  -->

  <rule id="rootRule">
    <one-of>

      <item>
        <tag>out="CLOSE_EDITOR";</tag>
        <one-of>
          <item> close </item>
          <item> close editor </item>
        </one-of>
      </item>

      <item>
        <tag>out="SAVE_GESTURE";</tag>
        <one-of>
          <item> save </item>
          <item> save gesture </item>
        </one-of>
      </item>

      <item>
        <tag>out="PRESS_MODE";</tag>
        <one-of>
          <item> press </item>
        </one-of>
      </item>

      <item>
        <tag>out="HOLD_MODE";</tag>
        <one-of>
          <item> hold </item>
        </one-of>
      </item>

      <item>
        <tag>out="GESTURE_COMMAND";</tag>
        <one-of>
          <item> command </item>
          <item> key </item>
          <item> keys </item>
        </one-of>
      </item>

      <item>
        <tag>out="ADD_FRAME";</tag>
        <one-of>
          <item> add </item>
          <item> add frame </item>
        </one-of>
      </item>

      <item>
        <tag>out="REMOVE_FRAME";</tag>
        <one-of>
          <item> remove </item>
          <item> remove frame </item>
          <item> delete </item>
          <item> delete frame </item>
        </one-of>
      </item>

      <item>
        <tag>out="NAME";</tag>
        <one-of>
          <item> name </item>
          <item> rename </item>
        </one-of>
      </item>

      <item>
        <tag>out="MOVE_FRAME_BACK";</tag>
        <one-of>
          <item> back </item>
          <item> move back </item>
          <item> move frame back </item>
        </one-of>
      </item>

      <item>
        <tag>out="MOVE_FRAME_FORWARD";</tag>
        <one-of>
          <item> forward </item>
          <item> move forward </item>
          <item> move frame forward </item>
        </one-of>
      </item>

      <item>
        <tag>out="HEAD";</tag>
        <one-of>
          <item> head </item>
        </one-of>
      </item>

      <item>
        <tag>out="LEFT_SHOULDER";</tag>
        <one-of>
          <item> left shoulder </item>
        </one-of>
      </item>

      <item>
        <tag>out="RIGHT_SHOULDER";</tag>
        <one-of>
          <item> right shoulder </item>
        </one-of>
      </item>

      <item>
        <tag>out="LEFT_ARM";</tag>
        <one-of>
          <item> left arm </item>
        </one-of>
      </item>

      <item>
        <tag>out="RIGHT_ARM";</tag>
        <one-of>
          <item> right arm </item>
        </one-of>
      </item>

      <item>
        <tag>out="LEFT_KNEE";</tag>
        <one-of>
          <item> left knee </item>
        </one-of>
      </item>

      <item>
        <tag>out="RIGHT_KNEE";</tag>
        <one-of>
          <item> right knee </item>
        </one-of>
      </item>

      <item>
        <tag>out="LEFT_FOOT";</tag>
        <one-of>
          <item> left foot </item>
        </one-of>
      </item>

      <item>
        <tag>out="RIGHT_FOOT";</tag>
        <one-of>
          <item> right foot </item>
        </one-of>
      </item>

      <item>
        <tag>out="OK";</tag>
        <one-of>
          <item> OK </item>
        </one-of>
      </item>

      <item>
        <tag>out="CANCEL";</tag>
        <one-of>
          <item> cancel </item>
        </one-of>
      </item>

    </one-of>
  </rule>
</grammar>